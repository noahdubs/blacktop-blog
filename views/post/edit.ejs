<%- include ('../partials/header') %>

<form action="/<%= username %>/post/<%= post._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" value="<%= post.title %>" name="post[title]">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" value="<%= post.text %>" name="post[text]">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" value="<%= post.picture %>" name="post[picture]">
    </div> 
    <div class="form-group">
        <button class="btn btn-primary">Update</button>
    </div>
    <a href="/<%= username %>/post/<%= post._id %>">Go Back</a>
</form>

<%- include ('../partials/footer')  %>