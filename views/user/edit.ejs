<%- include ('../partials/header') %>
<div class="row need-space">
    <div class="col-md-3"></div>
    <div class="col-md-6 content-section">
        <form action="/<%= user.username %>?_method=PUT" method="POST">
            <div class="container center form">
                <h2 class="register">Edit your profile</h2>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control control" name="user[email]" aria-describedby="emailHelp" value="<%= user.email %>">
                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control control" name="user[name]" placeholder="Enter your name" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control control" name="user[username]" placeholder="Enter a unique username" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control control" name="user[password]" placeholder="Enter a unique password">
                </div>
                <div class="form-group">
                    <label for="profilepic">Pick a profile picture</label>
                    <input type="text" name="user[picture]" class="form-control control" class="form-control" placeholder="Enter Image URL" value="<%= user.picture %>">
                </div>  
                <div class="form-group">
                    <label for="bio">Tell us about yourself, this will be displayed on your profile</label>
                    <input type="text" name="user[bio]" class="form-control control" class="form-control" placeholder="Enter bio" value="<%= user.bio %>" rows="5">
                </div>     
                <button class="btn btn-lg red-btn">Submit</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
<%- include ('../partials/footer')  %>