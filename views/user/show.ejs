<%- include ('../partials/header') %>

<div class="contianer-fluid">
    <div class="jumbotron profile-top">
        <div class="row">
            <div class="col-md-2 spacing"></div>
            <div class="col-md-8 content-section profile rounded-lg">
                <div class="row">
                    <div class="col-md-4">
                        <img class="rounded-circle" src="<%= user.picture %>" alt="">
                    </div>
                    <div class="col-md-4">
                        <h3><%= user.name %></h3>
                        <p>@<%= user.username %></p>
                        <p><%=  user.bio %></p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-primary" href="/<%= user.username %>/post/new">Add a New Post</a>
                        <a class="btn btn-warning" href="/<%= user.username %>/edit">Edit your profile</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2 spacing"></div>
        </div>
    </div>
</div>

<div class="container-fluid black no-padding">
    <div class="row">
        <div class="col-md-2 spacing"></div>
        <div class="col-lg-8 middle">
            <h3>Latest Posts From <%= user.name %></h3>
            <% user.posts.forEach((post)=>{ %>
                <div class="card content-section postcard">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="card-title"><a href="/<%= user.username %>/post/<%= post._id %>"><%= post.title %></a></h3>
                            <p class="card-text"><%= post.text %></p>
                            <p class="card-text"><a href="/<%= user.username %>">By <%= user.username %></a></p>
                            <p class="card-text"><small class="text-muted">December 5th 2019</small></p>
                        </div>
                        <div class="col-md-4">
                            <img src="<%= post.picture %>" class="card-img">
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="col-md-2 spacing"></div>
    </div>
</div>

<%- include ('../partials/footer')  %>




