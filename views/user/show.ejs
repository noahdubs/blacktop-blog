<%- include ('../partials/header') %>
<div class="jumbotron jumbotron-fluid newcolors pinkish">
    <div class="container">
        <h3><%= name %></h3>
        <p>@<%= username %></p>
        <img src="<%= picture %>">
        <p><%=  bio %></p>
        <a href="/<%= username %>/edit">Edit Profile</a>
    </div>
</div>

<div class="container-fluid black no-padding">
    <div class="row">
        <div class="col-md-1 spacing"></div>
        <div class="col-lg-6 middle">
            <h3><%= username %>'s recent posts</h3>
            <% posts.forEach((post)=>{ %>
                <article class="media content-section">
                    <div class="media-body newcolors">
                        <div class="article-metadata">
                            <a href="/<%= username %>"><%= username %></a>
                            <a href="/<%= username %>/post/<%= post._id %>">See more</a>
                        </div>
                        <p class="article-content"><%= post.text %></p>
                    </div>
                </article>
            <% }) %>
        </div>
        <div class="col-md-1 spacing"></div>
        <div class="col-md-3 left ">
            <nav class="newcolors">
                <div class="">
                    <h3>New Post</h3>
                </div>
                <div class="">
                    <h3>Popular Posts</h3>
                    <ul class="list-unstyled components">
                        <li>
                            <a href="#">Post 1</a>
                        </li>
                        <li>
                            <a href="#">Post 1</a>
                        </li>
                        <li>
                            <a href="#">Post 1</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>

